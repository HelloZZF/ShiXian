<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MySetActivity"
    android:orientation="vertical"
    android:background="@color/graybg">

    <LinearLayout
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/message_status"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/gradient_color"/>

        <com.example.shixian.widget.myToolbar
            android:id="@+id/message_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gradient_color"
            app:title="个人信息"
            app:leftButtonIcon="@drawable/back">

        </com.example.shixian.widget.myToolbar>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/message_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text=" 昵 称  "
                    android:layout_marginLeft="35dp"/>

                <EditText
                    android:id="@+id/message_name_text"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/message_name"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/message_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text=" 手 机  "
                    android:layout_marginLeft="35dp"/>

                <EditText
                    android:id="@+id/message_phone_text"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/message_phone"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/message_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:text=" 邮 箱  "
                    android:layout_marginLeft="35dp"/>

                <EditText
                    android:id="@+id/message_email_text"
                    android:layout_width="match_parent"
                    android:layout_toRightOf="@id/message_email"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:background="@color/gray"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"/>

            <Button
                android:id="@+id/message_button"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:text="确定"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/bh_btn_style"/>


        </LinearLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>