<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAboutUsActivity">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/about_us"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/about_status"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/transparent"/>

        <com.example.shixian.widget.myToolbar
            android:id="@+id/about_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent"
            app:title="关于我们"
            app:leftButtonIcon="@drawable/back">

        </com.example.shixian.widget.myToolbar>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/shixian"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar_view"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="官方邮箱"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/green5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="sx@shixian.com"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/green5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/shixian"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="食鲜"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@color/green5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="www.shixian.com"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/green5"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/phone"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/email"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="咨询电话"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/green5"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green4"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="400-6666-8888"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/green5"/>

    </LinearLayout>

</RelativeLayout>