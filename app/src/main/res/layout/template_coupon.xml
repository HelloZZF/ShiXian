<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/ripple_selector_style"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <ImageView
        android:id="@+id/coupon_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/usercoupon"
        android:tint="@color/coral"/>

    <TextView
        android:id="@+id/coupon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/coupon_image"
        tools:text="aaaaaaaaaaaaaa"/>

    <TextView
        android:id="@+id/coupon_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/gray"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/coupon_image"
        android:layout_below="@id/coupon_name"
        android:lines="1"
        android:ellipsize="end"
        tools:text="aaaaaaaaaaaaaa"/>

    <TextView
        android:id="@+id/coupon_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:textColor="@color/gray"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/coupon_content"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        tools:text="aaaaaaaaaaaaaa"/>

</RelativeLayout>
