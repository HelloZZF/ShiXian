            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/green4"
            android:text="差评1"/>

        <Button
            android:id="@+id/evealuation_button4"
            android:background="@drawable/evaluation_button_shape"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="28dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/green4"
            android:text="有图213"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="13dp"
            android:gravity="center">

            <Button
                android:id="@+id/evealuation_button5"
                android:background="@drawable/evaluation_button_shape"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green4"
                android:text="送的快36"/>

            <Button
                android:id="@+id/evealuation_button6"
                android:background="@drawable/evaluation_button_shape"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green4"
                android:text="味道好24"/>

            <Button
                android:id="@+id/evealuation_button7"
                android:background="@drawable/evaluation_button_shape"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green4"
                android:text="学得快14"/>

            <Button
                android:id="@+id/evealuation_button8"
                android:background="@drawable/evaluation_button_shape"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="28dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/green4"
                android:text="新鲜35"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/evaluation_recyclerview"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>