<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_user"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/user_scrollview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/graybg2">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp">

                        <ImageView
                            android:id="@+id/User_bg"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitXY"
                            android:background="@drawable/userbg"/>

                        <RelativeLayout
                            android:id="@+id/user_head"
                            android:layout_width="match_parent"
                            android:layout_height="140dp"
                            android:layout_marginTop="40dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/UserImage"
                                android:layout_width="110dp"
                                android:layout_height="110dp"
                                android:layout_margin="10dp"
                                />

                            <TextView
                                android:id="@+id/UserName"
                                android:layout_toRightOf="@id/UserImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24dp"
                                android:textColor="@color/black"
                                android:text="UserName"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="20dp"/>

                            <TextView
                                android:id="@+id/userscore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/UserName"
                                android:layout_toRightOf="@id/UserImage"
                                android:text="积分:"
                                android:textSize="20dp"/>

                            <TextView
                                android:id="@+id/UserScore"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/UserName"
                                android:layout_toRightOf="@id/userscore"
                                android:layout_marginLeft="3dp"
                                android:text="0"
                                android:textSize="20dp"/>

                            <ImageView
                                android:id="@+id/UserIcon"
                                android:layout_width="30dp"
                                android:layout_height="50dp"
                                android:tint="@color/gray"
                                android:layout_centerVertical="true"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="8dp"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/user_head"
                            android:background="#7000">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/user_collectimage"
                                    android:layout_width="28dp"
                                    android:layout_height="28dp"
                                    android:background="@drawable/usercollect"
                                    android:layout_marginRight="3dp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/UserCollect"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:textColor="#fff"
                                    android:text="我的收藏"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="#f0f0f0"/>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:id="@+id/user_couponimage"
                                    android:layout_width="29dp"
                                    android:layout_height="29dp"
                                    android:background="@drawable/usercoupon"
                                    android:layout_marginRight="3dp"
                                    android:layout_gravity="center_vertical"/>

                                <TextView
                                    android:id="@+id/UserCoupon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="20dp"
                                    android:gravity="center"
                                    android:textColor="#fff"
                                    android:text="优惠券"
                                    android:layout_gravity="center_vertical"/>

                            </LinearLayout>

                        </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:id="@+id/user_item1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon1"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="全部订单"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon1s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#f0f0f0"/>

                <LinearLayout
                    android:id="@+id/user_item2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon2"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="等待收货"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon2s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:id="@+id/user_item3"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon3"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="意见反馈"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon3s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#f0f0f0"/>

                <LinearLayout
                    android:id="@+id/user_item4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon4"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="我的地址"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon4s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:id="@+id/user_item5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon5"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="积分商城"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon5s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#f0f0f0"/>

                <LinearLayout
                    android:id="@+id/user_item6"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon6"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="浏览记录"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon6s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:id="@+id/user_item7"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon7"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置中心"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon7s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#f0f0f0"/>

                <LinearLayout
                    android:id="@+id/user_item8"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector">

                    <ImageView
                        android:id="@+id/item_icon8"
                        android:layout_marginLeft="34dp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:tint="@color/blue"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关于我们"
                        android:textSize="18dp"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/item_icon8s"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="180dp"
                        android:tint="@color/gray"
                        android:layout_gravity="center_vertical"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/user_StatusbarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"/>

        <com.example.shixian.widget.myToolbar
            android:id="@+id/user_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/transparent2"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    </LinearLayout>


</RelativeLayout>
