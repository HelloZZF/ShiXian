<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgclock"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/order_StatusbarView"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@drawable/gradient_color"/>

        <com.example.shixian.widget.myToolbar
            android:id="@+id/order_toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/gradient_color"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="订单详情"
            app:leftButtonIcon="@drawable/back"/>

    </LinearLayout>

    <ScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/order_addr_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:focusable="true"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/txt_addr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:textColor="@color/gray4"
                            android:text="配送地址"
                            />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/more"
                            android:tint="@color/gray3"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"/>


                    </RelativeLayout>

                    <View
                        android:background="@color/bgclock"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="346dp"
                        android:layout_marginTop="5dp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:textSize="18sp"
                        android:text="158****4790"
                        android:paddingLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black"
                        />



                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="浙江省新塍镇秀洲区思古桥村"
                        android:paddingLeft="8dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/gray4"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/order_item_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:focusable="true"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/txt_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/gray4"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:text="订单列表"
                            />

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@drawable/more"-->
                            <!--android:tint="@color/gray3"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_centerVertical="true"/>-->


                    </RelativeLayout>

                    <View
                        android:background="@color/bgclock"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="346dp"
                        android:layout_marginTop="5dp" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/order_time_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:focusable="true"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/txt_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/gray4"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:text="配送时间"
                            />

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@drawable/more"-->
                            <!--android:tint="@color/gray3"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_centerVertical="true"/>-->


                    </RelativeLayout>

                    <View
                        android:background="@color/bgclock"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="346dp"
                        android:layout_marginTop="5dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="日期: "/>

                        <TextView
                            android:id="@+id/date"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray4"
                            android:text="请点击选择配送日期"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_marginLeft="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:textColor="@color/black"
                            android:text="时间: "/>

                        <TextView
                            android:id="@+id/time"
                            android:clickable="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray4"
                            android:text="请点击选择配送时间"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/order_ways_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:focusable="true"
                    android:clickable="true">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:focusable="true"
                        android:clickable="true">

                        <TextView
                            android:id="@+id/txt_ways"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="16sp"
                            android:textColor="@color/gray4"
                            android:paddingLeft="8dp"
                            android:paddingTop="8dp"
                            android:text="支付方式"
                            />

                        <!--<ImageView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:src="@drawable/more"-->
                            <!--android:tint="@color/gray3"-->
                            <!--android:layout_alignParentRight="true"-->
                            <!--android:layout_centerVertical="true"/>-->


                    </RelativeLayout>

                    <View
                        android:background="@color/bgclock"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="346dp"
                        android:layout_marginTop="5dp" />

                    <RelativeLayout
                        android:id="@+id/rl_alipay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/white"
                        android:focusable="true"
                        android:clickable="true"
                        android:tag="alipay">



                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/icon_alipay"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_alipay_72"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/icon_alipay"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="支付宝"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="支持有支付宝，网银用户使用"
                                android:textSize="14sp"
                                android:textColor="@color/gray4"/>


                        </LinearLayout>


                        <RadioButton
                            android:id="@+id/rb_alipay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:checked="true"
                            android:clickable="false"
                            android:focusable="false"
                            />


                    </RelativeLayout>

                    <View
                        android:background="@color/bgclock"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="346dp"
                        android:layout_marginTop="5dp" />

                    <RelativeLayout
                        android:id="@+id/rl_wechat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="16dp"
                        android:paddingBottom="16dp"
                        android:background="@color/white"
                        android:focusable="true"
                        android:clickable="true"
                        android:tag="wx">



                        <ImageView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/icon_wechat"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/icon_wechat_72"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/icon_wechat"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="微信支付"
                                android:textSize="16sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="用微信支付，安全便捷"
                                android:textSize="14sp"
                                android:textColor="@color/gray4"/>


                        </LinearLayout>

                        <RadioButton
                            android:id="@+id/rb_webchat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:clickable="false"
                            android:focusable="false"
                            />


                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="58dp" />

        </LinearLayout>



    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent4">


        <TextView
            android:id="@+id/txt_total"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />


        <Button
            android:id="@+id/btn_createOrder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/green4"
            android:text="确认支付" />



    </RelativeLayout>

</RelativeLayout>