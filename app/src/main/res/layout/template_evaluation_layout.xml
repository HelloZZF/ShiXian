<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/evaluation_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/evaluation_name"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:layout_toRightOf="@id/evaluation_icon"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="啦啦啦啦"/>

    <TextView
        android:id="@+id/evaluation_content"
        android:layout_width="match_parent"
        android:layout_below="@id/evaluation_name"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:layout_height="50dp"
        android:textSize="15dp"
        android:ellipsize="end"
        android:text="啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊啊"/>

    <TextView
        android:id="@+id/evaluation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:textColor="@color/gray3"
        android:layout_alignParentRight="true"
        android:text="2017/11/16"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/graybg"/>

</RelativeLayout>