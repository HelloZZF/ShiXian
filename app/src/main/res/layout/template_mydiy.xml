<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mydiy_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="@drawable/ripple_selector_style">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/md_o"
        android:layout_marginLeft="10dp"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_centerVertical="true"
        android:src="@color/gray"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/md_food_icon"
        android:layout_toRightOf="@id/md_o"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/md_food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/md_food_icon"
        android:textSize="18dp"
        android:textStyle="bold"
        android:text="啊啊啊啊啊"/>

    <TextView
        android:id="@+id/md_author_name"
        android:layout_below="@id/md_food_name"
        android:layout_toRightOf="@id/md_food_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="16dp"
        android:text="啊啊啊啊"
        android:textColor="@color/gray"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/more"
        android:tint="@color/gray"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>