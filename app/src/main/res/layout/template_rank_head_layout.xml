<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rank_head_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rank_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/rank_tow"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/blue2"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank_food_icon2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <ImageView
                android:id="@+id/rank_icon2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/second"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/rank_food_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊啊"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/rank_author_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊啊"
                android:textSize="14dp"
                android:textColor="@color/tpwhite"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/rank_one"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:background="@color/coral2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank_food_icon1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <ImageView
                android:id="@+id/rank_icon1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/first"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/rank_food_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊啊"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/rank_author_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊啊"
                android:textSize="14dp"
                android:textColor="@color/tpwhite"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rank_three"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:background="@color/yellow2">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/rank_food_icon3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/white"/>

            <ImageView
                android:id="@+id/rank_icon3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/third"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:id="@+id/rank_food_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊啊"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/rank_author_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="啊啊啊啊"
                android:textSize="14dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/tpwhite"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>